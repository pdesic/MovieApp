@model IEnumerable<MovieApp.Models.Movie>

@{
    Layout = "_Layout";
}

<a class="btn btn-primary" asp-area="" asp-controller="Movies" asp-action="CreateForm">Create new Movie</a>
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Movies</th>
            <th>Release date</th>
            <th>Genre</th>
        </tr>
    </thead>	&nbsp;
<tbody>
@foreach (var movie in Model)
{
    <tr>
        <td>@movie.Name</td>
        <td>@movie.ReleaseDate</td>
        <td>
            @foreach (var genre in @movie.Genre)
            {
                <span class="badge badge-secondary">@genre</span>
            }
        </td>
    </tr>
}
</tbody>
</table>

